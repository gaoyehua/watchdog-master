<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_itemtask_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_itemtask_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机卫士"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/iv_itemtask_icon"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:id="@+id/tv_itemtask_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="占用内存:3.8MB"
        android:textColor="#ff0000"
        android:textSize="16dp"
        android:layout_below="@+id/tv_itemtask_name"
        android:layout_toRightOf="@+id/iv_itemtask_icon"
        android:layout_margin="15dp"

        />
    <CheckBox
        android:id="@+id/cb_itemtask_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp"
        android:focusable="false"
        android:clickable="false"
        />

</RelativeLayout>
