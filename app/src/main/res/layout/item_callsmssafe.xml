<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_callsmssafe_blacknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18888888888"
        android:textColor="#ff0000"
        android:textSize="18dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv_callsmssafe_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话拦截"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/tv_callsmssafe_blacknum"
        android:layout_marginLeft="15dp"
        />
    <ImageView
        android:id="@+id/iv_callsmssafe_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_delete_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />



</RelativeLayout>
