<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:watchdog="http://schemas.android.com/apk/com.gaoyehau.watchdog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--scrollView只能有一个子控件-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置中心"
        android:textSize="20dp"
        android:background="#8866ff00"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        />
    <com.gaoyehua.ui.SettingView
        android:id="@+id/sv_setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        watchdog:title1="提示更新"
        watchdog:des_on="打开提示更新"
        watchdog:des_off="关闭提示更新"
        ></com.gaoyehua.ui.SettingView>
    <com.gaoyehua.ui.SettingView
        android:id="@+id/sv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        watchdog:title1="提示更新"
        watchdog:des_on="打开提示更新"
        watchdog:des_off="关闭提示更新"
        ></com.gaoyehua.ui.SettingView>

    <com.gaoyehua.ui.SettingClinckView
        android:id="@+id/scv_setting_changebdk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.gaoyehua.ui.SettingClinckView>
    <com.gaoyehua.ui.SettingClinckView
        android:id="@+id/scv_setting_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.gaoyehua.ui.SettingClinckView>
    <com.gaoyehua.ui.SettingView
        android:id="@+id/sv_setting_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        watchdog:title1="软件锁"
        watchdog:des_on="打开隐私保护"
        watchdog:des_off="关闭隐私保护"
        ></com.gaoyehua.ui.SettingView>
</LinearLayout>
</ScrollView>